<h1><%= @cat.name %></h1>

<br>
<table>
	<tr>
		<td>Sex</td>
		<td><%= @cat.sex %></td>
	</tr>
	<tr>
		<td>Birthdate</td>
		<td><%= @cat.birth_date %></td>
	</tr>
	<tr>
		<td>Color</td>
		<td><%= @cat.color %></td>
	</tr>
	<tr>
		<td>Description</td>
		<td><%= @cat.description %></td>
	</tr>
</table>

<a href="<%= edit_cat_url(@cat) %>">Edit this Cat!</a>
<a href="<%= cats_url %>">Back to Cat Index</a>
<br>
<h3>Rental Requests</h3>
<table>
	<tr>
		<td> start date </td>
		<td> end date </td>
		<td> status </td>
	</tr>
	<% @cat.cat_rental_requests.order(:start_date).each do |request| %>
		<tr>
			<td><%= request.start_date %></td>
			<td><%= request.end_date %></td>
			<td><%= request.status%></td>
			<td><%= button_to ("Approve", :controller => "cat_rental_requests", :action => :approve ) %></td>
			<td><%= button_to ("Deny", :controller => "cat_rental_requests", :action => :deny) %></td>
		</tr>
	<% end %>
</table>